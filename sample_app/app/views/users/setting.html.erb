<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: setting_path, method: :put, multipart: true, authenticity_token: true) do |f| %>
      <%= render 'shared/error_messages' , object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <% if(@user.avatar) %>
        <%= f.label :current_avatar, "Current avatar" %>
        <br>
        <%= image_tag(@user.avatar, {:style => "width:50%;height:auto"}) %>
        <br>
      <% end %>

      <%= f.label :avatar, "Select your avatar" %>
      <%= f.file_field :avatar, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>


  </div>
</div>
